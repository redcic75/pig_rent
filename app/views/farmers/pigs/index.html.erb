      <%# <li><%= link_to 'delete', farmers_pig_path(pig), method: :delete %></li>
      <div class="card-pig">
            <% if pig.photos.blank? %>
              <img src="default-pig.jpg" alt="">
            <% else %>
              <%= cl_image_tag pig.photos.first.key, height: 300, width: 400, crop: :fill %>
            <% end %>
            <div class="card-pig-infos">
              <div>
                <h2><%= pig.name %></h2>
                <p><strong><%= pig.eat_capacity %></strong>kg/day</p>
                <p><strong><%= pig.required_space %></strong>m2 required</p>
              </div>
              <h2 class="card-pig-pricing">25â‚¬/day</h2>
              <% if pig.user.photo.nil? %>
                <img src="user.png" alt="">
              <% else %>
                <%= cl_image_tag pig.user.photo.key, height: 300, width: 400, crop: :fill, class: "card-pig-user avatar-bordered" %>
              <% end %>
            </div>
            <li><%= link_to 'edit', edit_farmers_pig_path(pig) %></li>
            <li><%= link_to 'delete', farmers_pig_path(pig), method: :delete %></li>
          </div>
        <%# <% end %>
    <% end %>
  </ul>
</div>

