<div class="content-container">

  <h1 class="show-title"> Here are the details for <%= @pig.name.capitalize %> from   <%= @pig.user.first_name %>'s farm</h1>

  <div class="card-pig-detailed">
    <img src="<%= cl_image_tag @pig.photo.key, height: 300, width: 400, crop: :fill %>"/>
    <div class="card-pig-detailed-infos">
      <div>
        <h2><%= @pig.name.capitalize %></h2>
        <p><strong><%= @pig.required_space %>m2</strong> of ground required</p>
        <p><%= @pig.name %> can eat <strong><%= @pig.eat_capacity %>kg/day</strong></p>
      </div>
      <h2 class="card-pig-detailed-pricing"><%= @pig.daily_price %>â‚¬/day</h2>
    </div>
  </div>
  <div class="btn-centered">
    <%= link_to "Pick this pig", new_pig_rental_path(@pig), class: "btn btn-flat" %>
  </div>
</div>
